%h2 Sign upする
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :nickname
    %br/
    = f.text_field :nickname, autofocus: true
  .field
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email"
  .field
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password"
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password"
  .field
    = f.label "お名前（全角）"
    %br/
    = f.text_field :last_name_kanji, placeholder: '例）山田', autofocus: true
    = f.text_field :first_name_kanji, placeholder: '例）彩', autofocus: true
  .field
    = f.label "お名前カナ（全角）"
    %br/
    = f.text_field :last_name_kana, placeholder: '例）ヤマダ', autofocus: true
    = f.text_field :first_name_kana, placeholder: '例）アヤ', autofocus: true
  .field
    = f.label '生年月日'
    %br/
    = f.date_select :birthday, start_year:Time.now.year, end_year:1900, autofocus: true
  .field
    = f.label '電話番号'
    %br/
    = f.text_field :tel, autofocus: true
  .actions
    = f.submit "Sign up"
= render "users/shared/links"
