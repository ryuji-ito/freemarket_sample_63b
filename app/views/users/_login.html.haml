.main
  .main__container
    .main__container__new
      %h2.main__container__new--text
        アカウントをお持ちでない方はこちら
      .main__container__new__link
        = link_to "新規会員登録", "#", class: "main__container__new__link--btn"

    .login
      = form_for "#" do |f|
        .login__content
          .login__content__email
            = f.email_field :email, class: "login__content__email--field"
          .login__content__password
            = f.password_field :password, class: "login__content__password--field"
          
          = f.submit "ログイン", class: "login__content--btn"
          
          .login__content--text
            = link_to "パスワードをお忘れの方", "#", class: "login__content--text"