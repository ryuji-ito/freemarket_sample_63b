%p 発送元・お届け先住所

= form_with(url: users_address_index_path, model: @address, local: true) do |f|
  = f.text_field :last_name_kanji, placeholder: '例）山田'
  = f.text_field :first_name_kanji, placeholder: '例）彩'
  = f.text_field :last_name_kana, placeholder: '例）ヤマダ'
  = f.text_field :first_name_kana, placeholder: '例）アヤ'
  = f.text_field :postal_code, placeholder: '例）123-4567'
  = f.collection_select :prefecture_id, Prefecture.all, :id, :name, prompt: "--"
  = f.text_field :municipality, placeholder: '例）横浜市緑区'
  = f.text_field :house_number, placeholder: '例）青山1-1-1'
  = f.text_field :building_name, placeholder: '例）柳ビル103'
  = f.text_field :tel, placeholder: '例）09012345678'
  = f.submit '登録する'